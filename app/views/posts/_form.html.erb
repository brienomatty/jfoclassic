<%= form_for @post do |f| %>
<% if @post.errors.any? %>
<div id="errors">
 <h2><%= pluralize(@post.errors.count, "error") %> prevented this post from saving</h2>
 <% @post.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
 <% end %>

</div>

<% end %>

<p>
 <%= f.label :title %><br>
 <%= f.text_field :title, size: "20x20" %>
</p>

<p>
 <%= f.label :body %><br>
 <%= f.text_area :body, size: "100x20" %>
</p>

<p>
 <%= f.submit %>
</p>
<% end  %>
